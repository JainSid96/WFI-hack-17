<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dcube.foodo.WorkMenu_Activity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="348dp"
        android:layout_height="450dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="101dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="nearbyNgo"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/card_view2"
            android:layout_alignStart="@+id/card_view2"
            android:layout_alignRight="@+id/card_view2"
            android:layout_alignEnd="@+id/card_view2">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="68dp"
                    android:layout_height="58dp"
                    app:srcCompat="@drawable/ngo" />

                <TextView
                    android:id="@+id/textHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:fontFamily="sans-serif-condensed"
                    android:text="FIND NEARBY     NGO"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="setupFoodpark"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="149dp">


            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="68dp"
                    android:layout_height="58dp"
                    app:srcCompat="@drawable/park" />

                <TextView
                    android:id="@+id/textWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:fontFamily="sans-serif-condensed"
                    android:text="SETUP FOOD     PARK"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="donateFood"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/card_view4"
            android:layout_alignLeft="@+id/card_view4"
            android:layout_alignStart="@+id/card_view4"
            android:layout_alignRight="@+id/card_view4"
            android:layout_alignEnd="@+id/card_view4">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/imageNgo"
                    android:layout_width="68dp"
                    android:layout_height="58dp"
                    app:srcCompat="@drawable/donation" />

                <TextView
                    android:id="@+id/textNgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/imageNgo"
                    android:layout_toRightOf="@+id/imageNgo"
                    android:fontFamily="sans-serif-condensed"
                    android:text="DONATE / LIST FOOD"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="animalShelter"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="149dp"
            android:layout_below="@+id/card_view2"
            android:layout_alignLeft="@+id/card_view2"
            android:layout_alignStart="@+id/card_view2"
            android:layout_alignRight="@+id/card_view2"
            android:layout_alignEnd="@+id/card_view2">


            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgDonation"
                    android:layout_width="68dp"
                    android:layout_height="58dp"
                    app:srcCompat="@drawable/animal" />

                <TextView
                    android:id="@+id/textDonation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imgDonation"
                    android:layout_toRightOf="@+id/imgDonation"
                    android:fontFamily="sans-serif-condensed"
                    android:text="FIND ANIMAL SHELTER"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Heading"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:fontFamily="sans-serif-condensed"
            android:text="FOODO"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:fontFamily="sans-serif-condensed"
            android:text="WORK"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="16dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
